// Украинский (mowa-ua)

  функція привітання(імʼя) {
    кажи("Привіт, " + імʼя + "!");
  }

  нехай імена = ["Андрій", "Оля", "Марко"];

  імена.кожен((імʼя) => {
    привітання(імʼя);
  });

  // Белорусский (mowa-by)
  функцыя прывітанне(імя) {
    скажы("Прывітанне, " + імя + "!");
  }

  нехай імены = ["Янка", "Настасся", "Кастусь"];

  імены.дляКожнага((імя) => {
    прывітанне(імя);
  });

  ///Русский (mowa-ru)
  функция приветствие(имя) {
    лог("Привет, " + имя + "!");
  }

  пусть имена = ["Ваня", "Катя", "Петя"];

  имена.каждому((имя) => {
    приветствие(имя);
  });

